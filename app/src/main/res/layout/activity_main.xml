<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jaswanthk.traceit.MainActivity">

    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:background="#9898df"
        tools:ignore="MissingConstraints,UselessLeaf"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/bus"
            android:background="@drawable/driverlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="129dp"
            android:text="BUS"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/student"
            android:background="@drawable/drawinglabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bus"
            android:layout_alignBottom="@+id/bus"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"
            android:text="STUDENT"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/admin"
            android:layout_width="wrap_content"
            android:background="@drawable/adminlabel"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bus"
            android:layout_alignBottom="@+id/bus"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:text="ADMIN"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
